<body id="home" class="wide">
    <!-- PRELOADER -->
    <div id="preloader">
        <div id="preloader-status">
            <div class="spinner">
                <div class="rect1"></div>
                <div class="rect2"></div>
                <div class="rect3"></div>
                <div class="rect4"></div>
                <div class="rect5"></div>
            </div>
            <div id="preloader-title">@Session["siteName"] Loading...</div>
        </div>
    </div>
    <!-- /PRELOADER -->
    <!-- WRAPPER -->
    <div class="wrapper">
        <!-- HEADER -->
        <header class="header fixed">
            <div class="header-wrapper">
                <div class="container">
                    <div class="row">
                        <!-- Logo -->
                        <div class="col-md-2">
                            <div class="logo" style="background-color: inherit">
                                <a target="_blank" onclick="window.open('@Model.Sitecontent.WebsiteClickURL')" href=''><img style="width: 212px; height: 74px;" src="@Session["CompanyLogo"]" alt='@Model.Sitecontent.CompanyDisplayName' /></a>
                            </div>
                        </div>
                        <!-- /Logo -->
                        <!-- Mobile menu toggle button -->
                        <a href="#" class="menu-toggle btn ripple-effect btn-theme-transparent"><i class="fa fa-bars"></i></a>
                        <!-- /Mobile menu toggle button -->
                        <!-- Navigation -->
                        <div class="col-md-10">
                            <nav class="navigation closed clearfix">
                                <div class="swiper-wrapper">
                                    <div class="swiper-slide">
                                        <!-- navigation menu -->
                                        <a href="#" class="menu-toggle-close btn"><i class="fa fa-times"></i></a>
                                        <ul class="nav sf-menu">
                                            <li><a href="#FindACar">Find a Car</a></li> 
                                            <li><a href="#WhoWeAre">Who we Are?</a></li> 
                                            <li><a href="#PickYourCar">Find Us</a></li> 
                                            <li><a href="#contact-us">Contact Us</a></li>
                                        </ul>
                                        <!-- /navigation menu -->
                                    </div>
                                </div>
                                <!-- Add Scroll Bar -->
                                <div class="swiper-scrollbar"></div>
                            </nav>
                        </div>
                        <!-- /Navigation -->
                    </div>
                </div>
            </div>
        </header>
        <!-- /HEADER -->
        <!-- CONTENT AREA -->
        <div class="content-area">
            @model APIInterface.Models.ResponseModels.HomeModel
            <!-- PAGE -->
            <section id="FindACar" class="page-section no-padding slider">
                <div class="container full-width">
                    <div class="main-slider">
                        <div >
                            <!-- Slide 1 -->
                            <div class="item slide1 ver1" style="background-image: url('@Model.Sitecontent.Banner1')">
                                <div class="caption">
                                    <div class="container">
                                        <div class="div-table">
                                            <div class="div-cell">
                                                <div class="caption-content">
                                                    <h2 class="caption-title">@Session["siteName"] </h2>
                                                    <h3 class="caption-subtitle">@Session["siteTitle"]</h3>
                                                    <!-- Search form -->
                                                    <div class="row">
                                                        <div class="col-sm-12 col-md-10 col-md-offset-1">
                                                            <div class="form-search dark">
                                                                @using (Html.BeginForm("SelectCar", Session["CompanyShortName"]+"/Rental", FormMethod.Post, new { @class = "form-horizontal  custom-group", role = "form", id="reservationForm" }))
                                                                {
                                                                    <div class="form-title">
                                                                        <i class="fa fa-globe"></i>
                                                                        <h2>Search for Cheap Rental Cars Wherever Your Are</h2>
                                                                    </div>
                                                                    <div class="row row-inputs">
                                                                        <div class="container-fluid">
                                                                            <div class="col-sm-6">
                                                                                <div class="form-group has-icon has-label">
                                                                                    @Html.LabelFor(m => m.ReservationForm.PickupLocation, new {@class = "control-label", @for = "formSearchUpLocation"})
                                                                                    @Html.DropDownListFor(m => m.ReservationForm.PickupLocation, new SelectList(Model.OperationsWorkPlaces, "OperationWorkplaceId", "LocationName", 0), "Select Pick-up location", new { @class = "form-control validateMandatory", style = "width:97.5%" })
                                                                                    <span class="form-control-icon"><i class="fa fa-map-marker"></i></span>
                                                                                </div>
                                                                            </div>
                                                                            <div class="col-sm-3">
                                                                                <div class="form-group has-icon has-label">
                                                                                    @Html.LabelFor(m => m.ReservationForm.PickupDateTime, new {@class = "control-label", @for = "formSearchUpDate"})
                                                                                    @Html.TextBoxFor(m => m.ReservationForm.PickupDateTime, new {@class = "form-control", id = "formSearchUpDate", style = "width:95.5%"})
                                                                                    <span class="form-control-icon"><i class="fa fa-calendar"></i></span>
                                                                                </div>
                                                                            </div>
                                                                            <div class="col-sm-3" style="margin-top: 5px;">
                                                                                <div class="form-group has-icon has-label selectpicker-wrapper">
                                                                                    <label>Picking Up Hour</label>
                                                                                    <select class="selectpicker input-price" style="max-height: 200px;overflow: auto" id="pickUpForm" data-live-search="true" data-width="100%"
                                                                                            data-toggle="tooltip" title="Select">
                                                                                        @foreach (var hour in @Model.ReservationForm.HoursList)
                                                                                        {
                                                                                            if (hour == "08:00")
                                                                                            {
                                                                                                <option selected="">@hour</option>
                                                                                            }
                                                                                            else
                                                                                            {
                                                                                                <option>@hour</option>
                                                                                            }
                                                                                        }
                                                                                    </select>
                                                                                    <span class="form-control-icon"><i class="fa fa-clock-o"></i></span>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="row row-inputs">
                                                                        <div class="container-fluid">
                                                                            <div class="col-sm-6">
                                                                                <div class="form-group has-icon has-label">
                                                                                    @Html.LabelFor(m => m.ReservationForm.DropoffLocation, new {@class = "control-label", @for = "formSearchOffLocation"})
                                                                                    @Html.DropDownListFor(m => m.ReservationForm.DropoffLocation, new SelectList(Model.OperationsWorkPlaces, "OperationWorkplaceId", "LocationName", 1), "Select Drop-off location", new { @class = "form-control validateMandatory", style = "width:97.5%" })
                                                                                    @*<input type="text" class="form-control" id="formSearchUpLocation" placeholder="Airport or Anywhere">*@
                                                                                    <span class="form-control-icon"><i class="fa fa-map-marker"></i></span>
                                                                                </div>
                                                                            </div>
                                                                            <div class="col-sm-3">
                                                                                <div class="form-group has-icon has-label">
                                                                                    @Html.LabelFor(m => m.ReservationForm.DropoffDateTime, new {@class = "control-label", @for = "formSearchOffDate"})
                                                                                    @*<input type="text" class="form-control" id="formSearchUpDate" placeholder="dd/mm/yyyy">*@
                                                                                    @Html.TextBoxFor(m => m.ReservationForm.DropoffDateTime, new { @class = "form-control", id = "formSearchOffDate", style = "width:95.5%" })
                                                                                    <span class="form-control-icon"><i class="fa fa-calendar"></i></span>
                                                                                </div>
                                                                            </div>
                                                                            <div class="col-sm-3" style="margin-top: 5px;">
                                                                                <div class="form-group has-icon has-label selectpicker-wrapper">
                                                                                    <label>Dropping Off Hour</label>
                                                                                    <select class="selectpicker input-price" id="dropoffForm" data-live-search="true" data-width="100%"
                                                                                            data-toggle="tooltip" title="Select">
                                                                                        @foreach (var hour in @Model.ReservationForm.HoursList)
                                                                                        {
                                                                                            if (hour == "08:00")
                                                                                            {
                                                                                                <option selected="">@hour</option>
                                                                                            }
                                                                                            else
                                                                                            {
                                                                                                <option>@hour</option>
                                                                                            }
                                                                                        }
                                                                                    </select>
                                                                                    @*<input type="text" class="form-control" />*@
                                                                                    <span class="form-control-icon"><i class="fa fa-clock-o"></i></span>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    <div class="row row-submit">
                                                                        <div class="container-fluid">
                                                                            <div class="inner">
                                                                                <button type="submit" style="    margin-bottom: 20px;" id="formSearchSubmit" class="btn btn-submit btn-theme pull-right">Find Car</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                    @Html.HiddenFor(m => m.ReservationForm.DropoffHours, new { @Value = "00:00", id = "DropoffHours" })
                                                                    @Html.HiddenFor(m => m.ReservationForm.PickupHours, new { @Value = "0:00", id = "PickupHours" })
                                                                }
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- /Search form -->
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- /Slide 1 -->
                        </div>
                    </div>
                </div>
            </section>
            

            <!-- /PAGE -->
            <!-- PAGE -->
            <section id="WhoWeAre" class="page-section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 wow flipInY" data-wow-offset="70" data-wow-duration="1s">
                            <div class="thumbnail thumbnail-featured no-border no-padding">
                                <div class="media">
                                    <a class="media-link" href="#">
                                        <div class="caption">
                                            <div class="caption-wrapper div-table">
                                                <div class="caption-inner div-cell">
                                                    <div class="caption-icon"><i class="fa fa-support"></i></div>
                                                    <h4 class="caption-title">Our Services</h4>
                                                    <div class="caption-text">
                                                        @Html.Raw(Model.Sitecontent.ServiceContents)
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="caption hovered">
                                        <div class="caption-wrapper div-table">
                                            <div class="caption-inner div-cell">
                                                <div class="caption-icon"><i class="fa fa-support"></i></div>
                                                <h4 class="caption-title">Our Services</h4>
                                                <div class="caption-text" style="color:black">@Html.Raw(Model.Sitecontent.ServiceContents.Length > 140 ? Model.Sitecontent.ServiceContents.Substring(0, 140) + "....." : Model.Sitecontent.ServiceContents) </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 wow flipInY" data-wow-offset="70" data-wow-duration="1s" data-wow-delay="200ms">
                        <div class="thumbnail thumbnail-featured no-border no-padding">
                            <div class="media">
                                <a class="media-link" href="#">
                                    <div class="caption">
                                        <div class="caption-wrapper div-table">
                                            <div class="caption-inner div-cell">
                                                <div class="caption-icon"><i class="fa fa-user"></i></div>
                                                <h4 class="caption-title">About Us</h4>
                                                <div class="caption-text">@Html.Raw(Model.Sitecontent.AboutusContents)</div>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="caption hovered">
                                        <div class="caption-wrapper div-table">
                                            <div class="caption-inner div-cell">
                                                <div class="caption-icon"><i class="fa fa-user"></i></div>
                                                <h4 class="caption-title">About Us</h4>
                                                <div class="caption-text" style="color:black">@Html.Raw(Model.Sitecontent.AboutusContents.Length > 140 ? Model.Sitecontent.AboutusContents.Substring(0, 140) + "....." : Model.Sitecontent.AboutusContents) </div>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
            <!-- /PAGE -->
            <!-- PAGE -->
           
            <!-- /PAGE -->
            
            <!-- PAGE -->
            <section id="PickYourCar" class="page-section no-padding no-bottom-space-off" >
                <div class="container full-width" style="height: 500px">
                    <!-- Google map -->
                    <div class="google-map" >
                        <div id="map-canvas"></div>
                    </div>
                    <!-- /Google map -->
                </div>
            </section>
            <!-- /PAGE -->

            <!-- PAGE -->
            <section id="contact-us" class="page-section contact dark">
                <div class="container">
                    <!-- Get in touch -->
                    <h2 class="section-title wow fadeInDown" data-wow-offset="200" data-wow-delay="100ms">
                        <small>Feel Free to Say Hello!</small>
                        <span>Get in Touch With Us</span>
                    </h2>
                    <div class="row">
                        <div class="col-md-6 wow fadeInLeft" data-wow-offset="200" data-wow-delay="200ms">
                            <!-- Contact form -->
                           
                                  <div class="row">
                                    <div class="col-md-6">
                                        <div class="outer required">
                                            <div class="form-group af-inner has-icon">
                                                <label class="sr-only" for="name">Name</label>
                                                @Html.TextBoxFor(m => m.EmailModel.SenderName, new {placeholder="Name", @class = "form-control placeholder", id = "name", style = "width:98%" })
                                                <span class="form-control-icon"><i class="fa fa-user"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="outer required">
                                            <div class="form-group af-inner has-icon">
                                                <label class="sr-only" for="email">Email</label>
                                                @Html.TextBoxFor(m => m.EmailModel.SenderEmail, new { placeholder = "Email", @class = "form-control placeholder", id = "email", style = "width:96%" })
                                                <span class="form-control-icon"><i class="fa fa-envelope"></i></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="outer required">
                                    <div class="form-group af-inner has-icon">
                                        <label class="sr-only" for="subject">Subject</label>
                                        @Html.TextBoxFor(m => m.EmailModel.EmailSubject, new { placeholder = "Subject", @class = "form-control placeholder", id = "subject", style = "width:98%" })


                                        <span class="form-control-icon"><i class="fa fa-bars"></i></span>
                                    </div>
                                </div>
                                <div class="form-group af-inner has-icon">
                                    <label class="sr-only" for="input-message">Message</label>
                                    @Html.TextAreaFor(m => m.EmailModel.EmailBody, new { rows="8" ,cols="50",placeholder = "Message", @class = "form-control placeholder", id = "body", style = "width:98%" })

                                    <span class="form-control-icon"><i class="fa fa-bars"></i></span>
                                </div>
                            <div class="outer required">
                                <div class="form-group af-inner">
                                    <input id="contact-form" style="    max-width: 543px;" type="submit" class="form-button form-button-submit btn btn-block btn-theme ripple-effect btn-theme-dark" value="Send message" />
                                </div>
                            </div>
                            <div class="outer required">
                                <div class="form-group af-inner">
                                    <label class="col-md-1 control-label validationAsterikLabel" id="sendingEmailLabel" style="display: none; width: 95%; color: white">Sending email...</label>
                                </div>
                            </div>
                           
                            <!-- /Contact form -->
                        </div>
                        <div class="col-md-6 wow fadeInRight" data-wow-offset="200" data-wow-delay="200ms">
                            <p>You are always welcome to Contact us at the following.</p>
                            <ul class="media-list contact-list">
                                <li class="media">
                                    <div class="media-left"><i class="fa fa-home"></i></div>
                                    <div class="media-body">Adress: @Model.Sitecontent.Address</div>
                                </li>
                               
                                <li class="media">
                                    <div class="media-left"><i class="fa fa-phone"></i></div>
                                    <div class="media-body">Support Phone: @Model.Sitecontent.Telephone</div>
                                </li>
                                <li class="media">
                                    <div class="media-left"><i class="fa fa-envelope"></i></div>
                                    <div class="media-body">E mails: @Model.Sitecontent.Email</div>
                                </li>
                                <li class="media">
                                    <div class="media-left"><i class="fa fa-clock-o"></i></div>
                                    <div class="media-body">Working Hours: 09:30 - 21:00 except on Sundays</div>
                                </li>
                               
                            </ul>
                        </div>
                    </div>
                    <!-- /Get in touch -->
                </div>
            </section>
            <!-- /PAGE -->

        </div>
        <!-- /CONTENT AREA -->
        <!-- FOOTER -->
        <footer class="footer">
            <div class="footer-meta">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12">
                            <p class="btn-row text-center">
                                <a target="_blank" onclick="window.open('@Model.Sitecontent.FBLink')" href='' class=" btn btn-theme ripple-effect btn-icon-left facebook wow fadeindown" data-wow-offset="20" data-wow-delay="100ms"><i class="fa fa-facebook"></i>FACEBOOK</a>
                                <a target="_blank" onclick="window.open('@Model.Sitecontent.TwiterLink')"  href="" class="btn btn-theme btn-icon-left ripple-effect twitter wow fadeInDown" data-wow-offset="20" data-wow-delay="200ms"><i class="fa fa-twitter"></i>TWITTER</a>
                            </p>
                            <div class="copyright">&copy; 2015 @Model.Sitecontent.CompanyDisplayName &nbsp;|&nbsp; @Model.Sitecontent.Address .</div>
                        </div>
                    </div>
                </div>
            </div>
            @foreach (var loc in Model.OperationsWorkPlaces)
            {
                <input type="hidden" class="loc" value="@loc.RawString" id='loc_+@loc.OperationWorkplaceId' />
                <input type="hidden" class="cor"value="@loc.CoordinatesContents" id='cor_+@loc.OperationWorkplaceId' />
            }
            @if (Model.OperationsWorkPlaces != null)
            {
                <input type="hidden" value="@Model.OperationsWorkPlaces.Count()" id="locationCount" />
            }
        </footer>
        <!-- /FOOTER -->
        <div id="to-top" class="to-top"><i class="fa fa-angle-up"></i></div>
    </div>
    <!-- /WRAPPER -->
    <!-- JS Global -->
    <script src="~/assets/plugins/jquery/jquery-1.11.1.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
